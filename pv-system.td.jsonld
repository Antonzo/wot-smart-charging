{  "@context": "https://www.w3.org/2019/wot/td/v1",
  "@type": "Thing",
  "title": "PV-System",
  "id": "urn:dev:wot:example:pv-system",
  "description": "Solar power system",
  "base" : "mqtt://127.0.0.1:1883",
  "security": [
    "nosec_sc"
  ],
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "events": {
    "status": {
      "title": "Operating status",
      "description": "Possible operating status (powerOn, powerOff, error)",
      "data": {
        "type": "string",
        "enum": [
          "powerOn",
          "powerOff",
          "error"
        ]
      },
      "forms": [
        {
          "href": "/PV-System/events/status",
          "contentType": "application/json",
          "op": [
            "subscribeevent",
            "unsubscribeevent"
          ]
        }
      ]
    },
    "power": {
      "title": "Current power",
      "description": "Power in Watt",
      "data": {
        "type": "number",
        "minimum": 0,
        "maximum": 7500,
        "unit": "W"
      },
      "forms": [
        {
          "href": "/PV-System/events/power",
          "contentType": "application/json",
          "op": [
            "subscribeevent",
            "unsubscribeevent"
          ]
        }
      ]
    }
  }
}